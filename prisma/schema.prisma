generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model tbl_categories {
  id           String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String         @unique @db.VarChar
  status       Boolean        @default(true)
  created_at   DateTime       @default(now()) @db.Timestamptz(6)
  description  String?        @db.VarChar
  tbl_products tbl_products[]
}

model tbl_order_details {
  id            String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  id_product    String       @db.Uuid
  id_order      String       @db.Uuid
  quantity      Decimal      @db.Decimal
  subtotal      Decimal      @db.Decimal
  created_at    DateTime     @default(now()) @db.Timestamptz(6)
  current_price Decimal      @db.Decimal
  tbl_orders    tbl_orders   @relation(fields: [id_order], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tbl_products  tbl_products @relation(fields: [id_product], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model tbl_orders {
  id                String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  id_user           String              @db.Uuid
  total             Decimal             @db.Decimal
  created_at        DateTime            @default(now()) @db.Timestamptz(6)
  status            order_status
  tbl_order_details tbl_order_details[]
  tbl_user          tbl_user            @relation(fields: [id_user], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model tbl_products {
  id                String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  category_id       String              @db.Uuid
  name              String              @db.VarChar
  stock             Decimal             @db.Decimal
  description       String              @db.VarChar
  price             Decimal             @db.Decimal
  image_url         String              @db.VarChar
  status            Boolean             @default(true)
  created_at        DateTime            @default(now()) @db.Timestamptz(6)
  tbl_order_details tbl_order_details[]
  tbl_categories    tbl_categories      @relation(fields: [category_id], references: [id], onDelete: NoAction)
}

model tbl_user {
  id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email      String       @unique @db.VarChar
  name       String       @db.VarChar
  password   String       @db.VarChar
  role       role
  status     Boolean      @default(true)
  created_at DateTime     @default(now()) @db.Timestamptz(6)
  tbl_orders tbl_orders[]
}

enum order_status {
  FINISHED
  PENDING
  CANCELLED
}

enum role {
  ADMIN
  USER
}
